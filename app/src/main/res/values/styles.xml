<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_back_white</item>

    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

<!--    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">-->
<!--        <item name="android:textColor">@color/white</item>-->
<!--    </style>-->

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">@dimen/width_100</item>
        <item name="android:layout_height">@dimen/height_50</item>
        <item name="android:layout_marginStart">@dimen/margin_15</item>
        <item name="android:layout_marginEnd">@dimen/margin_15</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="ScrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="signup_editext_style">
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_10</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:layout_marginTop">@dimen/margin_30</item>
        <item name="android:colorAccent">@color/new_user_button_color</item>
    </style>

    <style name="hint_style">
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="colorAccent">@color/hint_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="image_style_settings_page">
        <item name="android:layout_width">@dimen/width_30</item>
        <item name="android:layout_height">@dimen/height_30</item>
        <item name="android:layout_marginTop">@dimen/margin_15</item>
        <item name="android:layout_marginBottom">@dimen/margin_15</item>
    </style>

    <style name="text_style_settings_page">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_15</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="shadow_style_settings_page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_4</item>
        <item name="android:layout_marginRight">@dimen/margin_10</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

    <style name="full_content_style_settings_page">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_15</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
    </style>

    <style name="divider_style_settings_page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:background">@color/divider_color</item>
    </style>

<!--    <style name="spinnerStyle"  parent="@android:style/Widget.DropDownItem">-->
<!--        <item name="android:paddingLeft">5dp</item>-->
<!--    </style>-->

</resources>
