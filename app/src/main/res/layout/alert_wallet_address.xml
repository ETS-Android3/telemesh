<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ractangular_round_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="@dimen/margin_15"
            android:paddingStart="@dimen/margin_15"
            android:paddingEnd="@dimen/margin_15">

            <TextView
                android:id="@+id/my_wallet_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:gravity="center"
                android:text="@string/my_wallet_address"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_22"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_25"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/margin_5"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                app:layout_constraintTop_toBottomOf="@id/my_wallet_address" />

            <ImageView
                android:id="@+id/image_view_qr_code"
                android:layout_width="@dimen/width_150"
                android:layout_height="@dimen/height_150"
                android:layout_marginTop="@dimen/margin_15"
                android:contentDescription="@string/qr_content_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_id" />

            <Button
                android:id="@+id/copy_address"
                style="@style/CustomButton"
                android:layout_width="@dimen/width_160"
                android:layout_marginBottom="@dimen/margin_1"
                android:layout_weight="1"
                android:background="@drawable/ractangular_gradient"
                android:clickable="false"
                android:text="@string/copy_address"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="@dimen/margin_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_view_qr_code" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>