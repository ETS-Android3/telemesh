<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_alert_wifi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_alert_wifi_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/internal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/drawable_wifi_share_corner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/share_wifi_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_30"
                android:gravity="center"
                android:text="@string/turn_on_hotspot"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/share_wifi_id_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:text="@string/hotspot_id_pass"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_16"
                app:layout_constraintTop_toBottomOf="@+id/share_wifi_network" />

            <ImageView
                android:id="@+id/wifi_qr"
                android:layout_width="@dimen/width_150"
                android:layout_height="@dimen/width_150"
                android:layout_marginTop="@dimen/margin_25"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_wifi_id_pass" />

            <TextView
                android:id="@+id/share_wifi_network_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:gravity="center"
                android:text="@string/connect_qr_scan"
                android:textSize="@dimen/text_small_body_14"
                app:layout_constraintTop_toBottomOf="@+id/wifi_qr" />

            <View
                android:id="@+id/progress_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/white"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/div_shadow"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="@dimen/height_50"
                android:layout_height="@dimen/height_50"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/progress_view"
                app:layout_constraintLeft_toLeftOf="@+id/progress_view"
                app:layout_constraintRight_toRightOf="@+id/progress_view"
                app:layout_constraintTop_toTopOf="@+id/progress_view" />

            <TextView
                android:id="@+id/progress_connecting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_30"
                android:gravity="center"
                android:text="@string/connecting"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@+id/progress" />

            <View
                android:id="@+id/div_shadow"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/shadow"
                app:layout_constraintTop_toBottomOf="@+id/share_wifi_network_message" />

            <Button
                android:id="@+id/share_ok"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/in_app_share_bg_button"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small_body_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_shadow" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>